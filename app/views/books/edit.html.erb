<div class="edit">
<h1><strong>Editing Book</strong></h1>
<%= form_with model:@book, local: true do |f| %>
 <% if @book.errors.any? %>
        <ul>
         <% @book.errors.count %>
         <% @book.errors.full_messages.each do |message| %>
        <li class="error"><%= message %></li>
        </ul>    
        <% end %>
<% end %>
<p class="edit-p">Title</p>
<p class="edit-p"><%= f.text_field :title %></p>
<p class="edit-p">Body</p>
<p class="edit-p"><%= f.text_field :body%></p>
<p class="edit-p"><%= f.submit 'Update Book' %></p>
<p class="edit-p"><%= link_to 'Show',book_path %> | 
<%= link_to 'Back',books_path %></p>
<% end %>
</div>