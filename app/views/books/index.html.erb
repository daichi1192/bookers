<div class="notice"><%= flash[:notice] %></div>
<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
         <td><%= book.title %></td>
          <td><%= book.body %></td>
         <td>
            <%= link_to 'show',book_path(book) %>
         </td>
         <td>
            <%= link_to 'edit',edit_book_path(book)%>
         </td>
         <td>
            <%= link_to 'Destroy',book_path(book), method: :delete,"data-confirm" => "Are you sure?" %>

         </td>
        </tr>


      <% end %>
    </tbody>
</table>
<div class="index-title"><h2>New book</h2></div>
<%= form_with model:@book, url:'/books', local:true do |f| %>
    <% if @book.errors.any? %>
      <div class="error">
         <div><%= @book.errors.count %> errors prohibited this book form being saved:</div>
         <% @book.errors.full_messages.each do |message| %>
         <li class="error"><%= message %></li>
     </div>
        <% end %>
    <% end %>
    <div class="index-div">
    <h4>Title</h4>
    <%= f.text_field :title %>
    </div>

    <div class="index-div">
    <h4>Body</h4>
    <%= f.text_area :body %>
    </div>

    <div class="index-div">
        <%= f.submit 'Create Book' %>
    </div>

<% end %>